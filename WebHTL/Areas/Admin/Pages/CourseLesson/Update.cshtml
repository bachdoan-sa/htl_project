@page "{id?}"
@model WebHTL.Pages.Areas.Admin.CourseLesson.UpdateModel
@{
}
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="card">
        <div class="card-title">
            <h4>Create Role</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="UpdateLesson.LessonName"></label>
                        <input asp-for="UpdateLesson.LessonName" class="form-control" required />
                        <span asp-validation-for="UpdateLesson.LessonName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UpdateLesson.LessonTarget"></label>
                        <input asp-for="UpdateLesson.LessonTarget" class="form-control" required />
                        <span asp-validation-for="UpdateLesson.LessonTarget" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Nội dung bài học</label>
                        <textarea id="contentCKEditor" asp-for="UpdateLesson.LessonURL" required>This will be replace by CKEDITOR</textarea>
                        <span asp-validation-for="UpdateLesson.LessonURL" class="text-danger"></span>
                    </div>
                    <input class="btn btn-default" value="Submit" type="submit" />
                </form>
            </div>
        </div>
    </div>

</div>
<script src="~/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    CKEDITOR.replace('contentCKEditor');
</script>
