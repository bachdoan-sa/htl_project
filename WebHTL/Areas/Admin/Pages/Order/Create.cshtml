@page
@model WebHTL.Pages.Areas.Admin.Order.CreateModel
@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="card">
        <div class="card-title">
            <h4>Create Role</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="NewOrder.Total"></label>
                        <input asp-for="NewOrder.Total" class="form-control" required />
                        <span asp-validation-for="NewOrder.Total" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewOrder.OrderStatus"></label>
                        <input asp-for="NewOrder.OrderStatus" class="form-control" required />
                        <span asp-validation-for="NewOrder.OrderStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewOrder.OrderDetailId"></label>
                        <input asp-for="NewOrder.OrderDetailId" class="form-control" required />
                        <span asp-validation-for="NewOrder.OrderDetailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewOrder.AccountId"></label>
                        <input asp-for="NewOrder.AccountId" class="form-control" required />
                        <span asp-validation-for="NewOrder.AccountId" class="text-danger"></span>
                    </div>
                    <input class="btn btn-default" value="Submit" type="submit" />
                </form>
            </div>
        </div>
    </div>

</div>