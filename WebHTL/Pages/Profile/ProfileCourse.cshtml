@page "{CourseId}"
@model WebHTL.Pages.Profile.ProfileCourseModel
@{
    Layout = "_Layout";
}

<div class="d-flex gap-8 pb-4 m-5-30" style="margin-top:120px">
    <div class="w-25 hidden d-block card">
        <div class="card-header">
            <p class="card-title">Section</p>
        </div>
        <div class="card-body">
            @if (Model.CourseModules != null && Model.CourseModules.Any())
            {
                @foreach (var module in Model.CourseModules)
                {
                    <h5>@module.ModuleName</h5>
                    <ul>
                        @foreach (var lesson in module.CourseLessons)
                        {
                            <li>
                                <a asp-page="/ProfileCourse" asp-route-CourseLessonId="@lesson.Id" id="CourseLessonId">@lesson.LessonName</a>
                            </li>
                        }
                    </ul>
                }
            }
            else
            {
                <p>No modules found.</p>
            }

        </div>
    </div>
    <div class="w-75 card d-block">

        @if (Model.Lesson != null)
        {
            <div class="card-header">
                <h3>@Model.Lesson.LessonName</h3>
            </div>
            <div class="card-body">
                <p>@Model.Lesson.LessonURL</p>
            </div>
        }
        else
        {
            <p>No lesson content found.</p>
        }
    </div>
</div>
