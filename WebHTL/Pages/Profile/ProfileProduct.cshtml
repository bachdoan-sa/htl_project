@page
@model WebHTL.Pages.Profile.ProfileProductModel
@{
    Layout = "_LayoutProfile";
}
@section head{
    <link href="~/css/profile-page.css" rel="stylesheet" />
}
<section class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Khóa học của tôi</h3>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="mt20 pb10">
            <div class="wrapper-profile__bg wrapper-profile__activated">

                <table class="mt-3 w-100">
                    <thead style="text-align:center">
                        <tr>
                            <th>STT</th>
                            <th>HÌNH ẢNH KHÓA HỌC</th>
                            <th>TÊN KHÓA HỌC</th>
                            <th>THỜI LƯỢNG KHÓA HỌC</th>
                            <th style="text-align:center !important">TRẠNG THÁI</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Foreach here!-->
                        @if (Model.Drivers != null && Model.Drivers.Count > 0)
                        {
                            @foreach (var item in Model.Drivers.Select((value, i) => new { i, value }))
                            {
                                <tr style="border-top: 1px solid black; margin:20px">
                                    <td style="text-align:center">@(item.i + 1)</td>
                                    <td style="text-align:center;padding:20px;"><img src="~/images/BasicCshap.png" style="width:120px; height:auto; vertical-align: middle; border: 0;"></td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <div class="user-course">
                                                <p class="m-1" style="color:#F2B71A;font-weight:bold">
                                                    @item.value.Roadmap.Title
                                                </p>
                                                <p class="m-1">
                                                    <span class="ucourse-mobile_top_info_label">
                                                        MÃ ĐƠN HÀNG:
                                                    </span>
                                                    DA85372
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <div class="user-course">
                                                <p class="m-1">
                                                    <span class="user-course_author_label">
                                                        BÀI GIẢNG:
                                                    </span>
                                                    13
                                                </p>
                                                <p class="m-1">
                                                    <span class="user-course_author_label">
                                                        LOẠI:
                                                    </span>
                                                    @item.value.Roadmap.RoadmapType
                                                </p>
                                                @*<p class="m-1">
                                        <span class="user-course_author_label">
                                        Giảng viên:
                                        </span>
                                        T1OUYA
                                        </p>*@
                                            </div>
                                        </div>
                                    </td>
                                    <td style="text-align:center !important">
                                        <a class="wrapper-profile__activated-link" href="~/Profile/ProfileRoadMap/@item.value.RoadmapId">Vào học</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr style="border-top: 1px solid black">
                                <td colspan="5" class="justify-content-center text-center" style="padding-top: 20px; font-size:15px">Bạn chưa mua lộ trình hoặc chúng tôi chưa thể cập nhật cho bạn</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->
    <!-- footer -->
    <footer class="footer"> © 2018 All rights reserved. Template designed by <a href="https://colorlib.com">Colorlib</a></footer>
    <!-- End footer -->
</section>